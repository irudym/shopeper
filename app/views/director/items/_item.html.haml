%tr
  %td
    %a{href: edit_director_item_path(item)}
      = item.name
      = 'no_name' if item.name == ''
  %td
    = item.type.name
  %td
    = item.brand.name
  %td
    = item.description
  %td
    - item.pictures.each do |picture|
      = image_tag picture.image.url(:thumb)
  %td
    = link_to "#{icon('trash')}".html_safe, director_item_path(item), method: :delete, confirm: 'Are you sure ?'