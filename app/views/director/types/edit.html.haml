= show_errors @type
= form_for @type, url: director_type_path, html: {class: 'form-horizontal col-sm-6', role: 'form'} do |form|
  .form-group
    = form.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = form.text_field :name, class: 'form-control'
  .form-group
    = form.label :description, class: 'control-label col-lg-2'
    .col-lg-10
      = form.text_area :description, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-4
      = form.submit 'Update', class: 'button button-gray'
.col-sm-6
  .thumbnail
    =image_tag @type.picture.image.url(:thumb) if @type.picture
