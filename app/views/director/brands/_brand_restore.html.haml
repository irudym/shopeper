%tr
  %td
    =image_tag brand_restore.picture.image.url(:thumb)
  %td
    = brand_restore.name
  %td
    = brand_restore.description
  %td
    = link_to "#{icon('undo')}".html_safe, {controller: :brands, action: "update", id: brand_restore.id, brand: {trash: false}}, method: :put
  %td
    = link_to "#{icon('trash')}".html_safe, director_brand_path(brand_restore), method: :delete, confirm: 'Are you sure ?'