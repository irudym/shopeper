%tr
  %td
    %a{href: edit_director_brand_path(brand)}
      =image_tag brand.picture.image.url(:thumb)
  %td
    %a{href: edit_director_brand_path(brand)}
      = brand.name
  %td
    = brand.description
  %td
    = link_to "#{icon('trash')}".html_safe, director_brand_path(brand), method: :delete, confirm: 'Are you sure ?'
