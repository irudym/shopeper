= form_for @mall do |f|
  - if @mall.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mall.errors.count, "error")} prohibited this mall from being saved:"
      %ul
        - @mall.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .actions
    = f.submit 'Save'
