= section_menu(@menu)
= show_notice(notice)
.row
  .col-sm-12
    %table.table
      %thead
        %tr
          %th Name
          %th Address
          %th Delete
      %tbody
        - @malls.each do |mall|
          %tr
            %td
              = mall.name
            %td
              = mall.address
            %td
              = link_to "#{icon('trash')}".html_safe, director_mall_path(mall), method: :delete, confirm: 'Are you sure ?'