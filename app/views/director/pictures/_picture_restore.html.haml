%tr
  %td
    =image_tag picture_restore.image.url(:thumb)
  %td
    = picture_restore.name
  %td
    = picture_restore.description
  %td
    = link_to "#{icon('undo')}".html_safe, {controller: :pictures, action: "update", id: picture_restore.id, picture: {trash: false}}, method: :put
  %td
    = link_to "#{icon('trash')}".html_safe, director_picture_path(picture_restore), method: :delete, confirm: 'Are you sure ?'