= show_errors @picture

= form_for @picture, url: director_pictures_path, html: {class: 'form-horizontal', role: 'form'} do |form|
  .form-group
    = form.label :name, class: 'control-label col-sm-2'
    .col-sm-4
      = form.text_field :name, class: 'form-control'
  .form-group
    = form.label :description, class: 'control-label col-sm-2'
    .col-sm-4
      = form.text_area :description, class: 'form-control'
  .form-group
    = form.label :image, class: 'control-label col-sm-2'
    .col-sm-4
      = form.file_field :image, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-4
      = form.submit 'Add Picture', class: 'button button-gray'