%tr
  %td
    = color_box(color_restore.hex_code)
  %td
    = color_restore.name
  %td
    = link_to "#{icon('undo')}".html_safe, {controller: :colors, action: "update", id: color_restore.id, color: {trash: false}}, method: :put
  %td
    = link_to "#{icon('trash')}".html_safe, director_color_path(color_restore), method: :delete, confirm: 'Are you sure ?'